<h2>Créer un devis à partir d’un texte</h2>

<%= simple_form_for @quote do |f| %>
  <%= f.input :content,
              as: :text,
              label: "Décrivez le chantier ou le besoin",
              input_html: { rows: 6 } %>
  <%= f.button :submit, "Créer le devis", class: "btn btn-success" %>
<% end %>
