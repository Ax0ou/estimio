<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">üë• Mes clients</h1>
    <div class="d-flex gap-2">
      <%= link_to "üìÑ Mes devis", company_quotes_path, class: "btn btn-outline-primary" %>
      <%= link_to "‚ûï Nouveau client", new_company_client_path, class: "btn btn-primary" %>
    </div>
  </div>
  <% if @clients.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Pr√©nom</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse</th>
            <th scope="col">Cr√©√© le</th>
            <th scope="col" class="text-end"></th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.first_name %></td>
              <td><%= client.last_name %></td>
              <td><%= client.address %></td>
              <td><%= client.created_at.strftime("%d/%m/%Y") %></td>
              <td class="text-end">
                <%= link_to client_path(client), class: "btn btn-sm btn-outline-primary rounded me-2", title: "Voir" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_client_path(client), class: "btn btn-sm btn-outline-primary rounded me-2", title: "Modifier" do %>
                  <i class="bi bi-pencil-square"></i>
                <% end %>
                <button type="button" class="btn btn-sm btn-outline-danger rounded" title="Supprimer" data-bs-toggle="modal" data-bs-target="#deleteModal" data-client-id="<%= client.id %>" data-client-name="<%= client.first_name %> <%= client.last_name %>">
                  <i class="bi bi-trash3"></i>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info" role="alert">
      Aucun client enregistr√© pour le moment.
    </div>
  <% end %>
</div>

<!-- Modal de confirmation de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0 pb-0">
        <h5 class="modal-title text-danger" id="deleteModalLabel">
          <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body pt-2">
        <p class="mb-3">√ätes-vous s√ªr(e) de vouloir supprimer le client <strong id="clientName"></strong> ?</p>
        <div class="alert alert-warning d-flex align-items-center" role="alert">
          <i class="bi bi-info-circle me-2"></i>
          <small>Cette action est irr√©versible et supprimera √©galement tous les devis associ√©s √† ce client.</small>
        </div>
      </div>
      <div class="modal-footer border-0 pt-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
        <form id="deleteForm" method="post" class="d-inline">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="hidden" name="_method" value="delete">
          <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash3 me-1"></i>Supprimer d√©finitivement
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deleteModal = document.getElementById('deleteModal');
    const deleteForm = document.getElementById('deleteForm');
    const clientNameSpan = document.getElementById('clientName');

    if (deleteModal) {
      deleteModal.addEventListener('show.bs.modal', function(event) {
        const button = event.relatedTarget;
        const clientId = button.getAttribute('data-client-id');
        const clientName = button.getAttribute('data-client-name');

        clientNameSpan.textContent = clientName;
        deleteForm.action = `/clients/${clientId}`;
      });
    }
  });
</script>
