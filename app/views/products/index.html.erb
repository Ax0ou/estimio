<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">ðŸ§° Mes produits</h1>
    <div class="d-flex gap-2">
      <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newProductModal">âž• Nouveau produit</button>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#importProductsModal">ðŸª„ GÃ©nÃ©rer avec l'IA</button>
    </div>
  </div>

  <% if @products.any? %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">UnitÃ©</th>
            <th scope="col" class="text-end"></th>
          </tr>
        </thead>
        <tbody id="products">
          <%= render @products %>
        </tbody>
