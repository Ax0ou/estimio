<%= turbo_stream.replace(dom_id(@line_item),
  partial: "quotes/line_item",
  locals: { line_item: @line_item }) %>

<%= turbo_stream.replace "section-#{@line_item.section_id}-total",
  partial: "quotes/section_total",
  locals: { section: @line_item.section } %>

<%= turbo_stream.replace "quote-total",
  partial: "quotes/quote_total",
  locals: { quote: @line_item.section.quote } %>
